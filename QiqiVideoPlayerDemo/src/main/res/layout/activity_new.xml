<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background">

    <LinearLayout

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="15dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="七七视频播放器"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="1.1 最简单的播放视频"/>
            <TextView
                android:id="@+id/tv_3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="2.1 竖屏全屏播放/横屏全屏播放"/>
            <TextView
                android:id="@+id/tv_3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="3.1 一个页面播放多个视频"/>
            <TextView
                android:id="@+id/tv_4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="4.1 页面悬浮可拖动小窗口播放视频"/>
            <TextView
                android:id="@+id/tv_4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="4.2 视频列表中自动悬浮播放视频"/>
            <TextView
                android:id="@+id/tv_4_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="4.3 视频列表中小窗口播放视频"/>
            <TextView
                android:id="@+id/tv_6_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.1 在fragment的列表播放"/>
            <TextView
                android:id="@+id/tv_6_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.2 在fragment的列表播放，自动播放"/>
            <TextView
                android:id="@+id/tv_6_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.3 在列表中播放，类似抖音，使用ViewPager"/>
            <TextView
                android:id="@+id/tv_6_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.4 在列表中播放，类似抖音，使用RecyclerView"/>
            <TextView
                android:id="@+id/tv_6_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.5 在fragment的列表播放无缝切换"/>
            <TextView
                android:id="@+id/tv_6_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="5.6 在列表播放，一次滑动一个item"/>
            <TextView
                android:id="@+id/tv_7_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="6.1 播放器添加视频自定义弹幕视图"/>
            <TextView
                android:id="@+id/tv_8_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="7.1 播放器添加自定义广告"/>

            <TextView
                android:id="@+id/tv_10_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="8.1 连续性播放视频"/>
            <TextView
                android:id="@+id/tv_11_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="9.1 视频播放器切换清晰度操作"/>
            <TextView
                android:id="@+id/tv_13_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="10.1 简单的视频剪辑示例"/>

            <TextView
                android:id="@+id/tv_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:text="11.1 使用自定义SurfaceView学习demo"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>